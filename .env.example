# Discord Bot Configuration
DISCORD_TOKEN=API_CODE

# Channel Configuration - Support multiple servers
# Format: channel_id1,channel_id2,channel_id3
# Example: 1234567890,9876543210,1111222233
DISCORD_CHANNEL_IDS=API_CODE

# Alternative: Single channel (for backward compatibility)
# DISCORD_CHANNEL_ID=API_CODE

# News Configuration
NEWS_CHECK_INTERVAL_HOURS=4
MAX_NEWS_PER_POST=3

# Tech News Filtering (new feature)
STRICT_TECH_FILTER=true  # Set to false to allow all news from The Verge

# Translation Configuration
# Note: googletrans uses Google Translate for free, but for production
# consider using Google Cloud Translation API for better reliability
TARGET_LANGUAGE=mn  # Mongolian language code
